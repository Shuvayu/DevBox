@model IEnumerable<Website.ViewModels.MedicineViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddMedicine")
</p>
<table class="table">
    <tr>
