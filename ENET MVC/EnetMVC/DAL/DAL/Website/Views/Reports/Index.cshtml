@model Website.ViewModels.ReportsViewModel

@{
    ViewBag.Title = "Reports";
}
<div class="form-horizontal">
    <h1>Reports</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.SelectedReport, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedReport, null, "--Select--", new { htmlAttributes = new { @class = "form-control input-lg", @id = "ddlreport" }, })
            @Html.ValidationMessageFor(model => model.SelectedReport, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="report1 report">
        @*@Html.Partial("_DistributionCenterLosses")*@
        @{ Html.RenderAction("DCLosses", "Reports");
        }
    </div>
    <div class="report2 report">
        @*@Html.Partial("_DistributionCenterStock")*@
        @{ Html.RenderAction("DCStock", "Reports");
        }
    </div>
    <div class="report3 report">
        @*@Html.Partial("_DoctorActivity")*@
    </div>
    <div class="report4 report">
        @{ Html.RenderAction("GlobalStock", "Reports"); }
        @*@Html.Partial("_GlobalStock")*@
    </div>
    <div class="report5 report">
        @*@Html.Partial("_ValueinTransit")*@
        @{ Html.RenderAction("ValueinTransit", "Reports"); }
    </div>


</div>

@section Scripts{
    <script>
        $('.report').hide();
        $('#SelectedReport').change(function () {
            debugger;
            var selected = $('#SelectedReport').val();
            var report = ".report" + selected;
            $('.report').hide();
            $(report).show();
            
            if (selected == 1) {
                $.post('@Url.Action("DCLosses", "Reports")', function (data) {
                    debugger;
                });
            }
            else if (selected == 2) {
                $.post('@Url.Action("DCStock", "Reports")', function (data) {
                    debugger;
                });
            }
            else if (selected == 3) {
                $.post('@Url.Action("DoctorActivity", "Reports")', function (data) {
                    debugger;
                });
            }
            else if (selected == 4) {
                $.post('@Url.Action("GlobalStock", "Reports")', function (data) {
                    debugger;
                });
            }
            else if (selected == 5) {
                $.post('@Url.Action("ValueinTransit", "Reports")', function (data) {
                    debugger;
                });
            }
        });


    </script>


}





